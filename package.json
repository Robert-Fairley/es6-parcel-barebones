  "license": "MIT",
  "dependencies": {
    "babel-preset-env": "^1.6.1",
    "mocha": "^5.0.4"
  },
  "devDependencies": {
    "autoprefixer": "^8.1.0",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "jsdom": "^11.6.2",
    "mocha-jsdom": "^1.1.0",
    "mock-css-modules": "^1.0.0",
    "postcss-modules": "^1.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Robert-Fairley/es6-parcel-barebones.git"
  }
